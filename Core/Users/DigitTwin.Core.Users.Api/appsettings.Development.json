{
    "DatabaseSettings": {
        "Provider": "PostgreSQL",
        "ConnectionStrings": {
            "PostgreSQL": "Host=localhost;Port=5444;Database=DigitTwin.Users;Username=postgres;Password=postgres",
            "MSSQL": "Server=localhost;Database=DigitTwin.Users;User Id=user;Password=pass;Encrypt=false"
        }
    },

    "Kafka": {
        "Producers": {
            "OrderProducer": {
                "BootstrapServers": "",
                "Topic": "CoreMail.Users",
                "Properties": {
                    "message.timeout.ms": "5000"
                }
            }
        }
    },

    "RedisSettings": {
        "ConnectionString": "",
        "DefaultTTLSeconds": 300
    },

    "JwtSettings": {
        "SecretKey": "development-secret-key-with-at-least-32-characters",
        "Issuer": "DigitTwin.Core.Users.Dev",
        "Audience": "DigitTwin.Users.Dev",
        "ExpirationToken": "00:00:01:00",
        "ExpirationRefresh": "01:00:00:00",
        "Algorithm": "HS256"
    },

    "LoggerSeq": {
        "Url": "http://localhost:5341",
        "MinLevel": "Information",
        "ApplicationName": "DigitTwin.Core.Users"
    },

    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft.AspNetCore": "Warning"
        }
    },

    "Kestrel": {
        "Endpoints": {
            "Http": {
                "Url": "http://localhost:5001"
            }
        }
    }
